<%= tinymce_assets %>
<%= tinymce %> 
<%= form_for [:administration, @administration_product], :html => {:multipart => true} do |f| %>
  <%= render :partial => 'shared/errors', :locals => {:object => @administration_product }%>
  
<% if params[:cat_id] %>
	<input type="hidden" name="current_category_redirect" value="<%=params[:cat_id]%>"/>
<% end %>
<%= render :partial => 'tabs' %>

<%= render :partial => 'administration/products/form_tabs/main', :locals => {:f => f} %>
<%= render :partial => 'administration/products/form_tabs/additional', :locals => {:f => f} %>
<%= render :partial => 'administration/products/form_tabs/images', :locals => {:f => f} %>

<%= f.submit "Отправить" %>

<% end %>
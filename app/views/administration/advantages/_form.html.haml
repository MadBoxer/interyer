= form_for [:administration, @adv] do |f|
  - if @adv.errors.any?
    #error_explanation
      %h2= "#{pluralize(@adv.errors.count, "error")} prohibited this administration_advantage from being saved:"
      %ul
        - @adv.errors.full_messages.each do |msg|
          %li= msg
  %table
    %tr
      %td= f.label 'Название'
      %td= f.text_field :name
    %tr
      %td= f.label 'Краткое описание'
      %td= f.text_field :announce
    %tr
      %td= f.label 'Изображение'
      %td= f.file_field :avatar
    %tr
      %td= f.label 'Активность'
      %td= f.check_box :active, :checked => @adv.id ? @adv.active : true
    %tr
      %td{:colspan => 2}= f.submit 'Сохранить'

<table border=1 cellpadding=2>
	<tr>
		<th>№</th>
		<th>Название</th>
		<th>Количество</th>
		<th>Сумма</th>
	</tr>
	<% i = 1 %>
<% @cart.items.each do |item| %>
	<tr>
		<td><%=i%></td>
		<td><%= item.product.name %></td>
		<td><%= item.quantity %></td>
		<td><%= (item.quantity*item.product.price).to_i %> руб</td>
	</tr>
	<% i += 1 %>
<% end %>

	<tr>
		<th colspan="3"></th>
		<th>Итого: <%= @cart.total_price.to_i%> руб</th>
	</tr>
</table>
%h1= @action.name
%hr
-unless @action.products.empty?
  %ul#products_list
    -@action.products.each do |p|
      %li
        = link_to image_tag(p.product_images.empty? ? '/images/no_image.png' : p.product_images.main.first.name_url(:mini), :height => '150'), :controller => :product, :action => :show, :prod_ref => (!p.alias.empty? ? p.alias : p.id.to_s)
        .clear
        = link_to p.name, :controller => :product, :action => :show, :prod_ref => (!p.alias.empty? ? p.alias : p.id.to_s)
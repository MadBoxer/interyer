<h2><%= @category.name %></h2>	
<hr>
<% if @category.categories.length > 0 %>
	<ul>
		<% @category.categories.each do |c| %>
			<li><%= link_to c.name, c.alias %></li>
		<% end %>
	</ul>
<% end %>
<ul id="products_list">
	<% if @products.empty? %>
		Для данной категории товаров нет
	<% end %>
	<% @products.each do |p| %>
		<li>
			<%= link_to image_tag('/images/no_image.png', :size => '220x150'), :controller => :product, :action => :show, :cat_ref => Category.where(:alias => params[:cat_ref]).first.alias, :prod_ref => (!p.alias.empty? ? p.alias : p.id.to_s) %>
			<%= link_to p.name, :controller => :product, :action => :show, :cat_ref => Category.where(:alias => params[:cat_ref]).first.alias, :prod_ref => (!p.alias.empty? ? p.alias : p.id.to_s) %>
		</li>
	<% end %>
</ul>

<%= paginate @products %>
